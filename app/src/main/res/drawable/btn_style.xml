<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape>
        <solid
            android:color="#43a047">
        </solid>
    <corners
        android:radius="5dp">
    </corners>
        <stroke
            android:width="6dp"
            android:color="@color/colorPrimary"/>

    </shape>
</item>
    <item>
        <shape>
            <gradient
                android:startColor="#1b5e20"
                android:endColor="#43a047"
                android:angle="270">
            </gradient>
            <corners
                android:radius="5dp">

            </corners>
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary"/>
        </shape>
    </item>
</selector>